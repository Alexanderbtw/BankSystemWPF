<Window x:Class="BankSystem.WithdrawWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankSystem"
        mc:Ignorable="d"
        Title="WithdrawWindow" Height="130" Width="400">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Enter a multiple of 100:" VerticalAlignment="Top"/>

        <Button x:Name="btnClose" Content="Cancel" Margin="10,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="170" Click="btnClose_Click"/>
        <Button x:Name="btnWithdraw" Content="Withdraw" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="170" Click="btnWithdraw_Click"/>
        <TextBox x:Name="tbAmountMoney" Margin="10,31,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" PreviewKeyDown="tbAmountMoney_KeyPressed"/>

    </Grid>
</Window>
